<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Directory">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="欢迎来到 Xamarin Forms 示例!" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,20,0,0" />

            <StackLayout Margin="0,20,0,0" >
                <Button Text="按钮" Clicked="Button_Clicked" />
            </StackLayout>

            <StackLayout Margin="0,20,0,0" >
                <Button Text="图片" Clicked="Image_Clicked" />
            </StackLayout>

            <StackLayout Margin="0,20,0,0" >
                <Button Text="输入框" Clicked="Entry_Clicked" />
            </StackLayout>

            <StackLayout Margin="0,20,0,0" >
                <Button Text="文本" Clicked="Label_Clicked" />
            </StackLayout>

            <StackLayout Margin="0,20,0,0" >
                <Button Text="滑块 (Slider)" Clicked="Slider_Clicked" />
            </StackLayout>

            <StackLayout Margin="0,20,0,0" >
                <Button Text="盒子视图 (BoxView)" Clicked="BoxView_Clicked" />
            </StackLayout>

        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>