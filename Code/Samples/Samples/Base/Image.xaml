<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Base.Image">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout>
                <Label Text="示例 1 : 展示一张网络图片" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,20,0,0" />

                <StackLayout>
                    <Image Source="https://avatars0.githubusercontent.com/u/4196818" WidthRequest="100" HeightRequest="100"/>
                </StackLayout>
                
            </StackLayout>

            <StackLayout>
                <Label Text="示例 2 : 展示一张圆形图片" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,20,0,0" />

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" Padding="0" WidthRequest="100" HeightRequest="100">
                    <Frame CornerRadius="50" Padding="0">
                        <Image Source="https://avatars0.githubusercontent.com/u/4196818" WidthRequest="100" HeightRequest="100"/>
                    </Frame>
                </StackLayout>
                
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>